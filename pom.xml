<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<artifactId>bindgen-parent</artifactId>
	<groupId>org.bindgen</groupId>
	<version>3.1.1</version>
	<packaging>pom</packaging>
	
	<name>Bindgen (parent)</name>

	<modules>
		<module>processor</module>
		<module>examples</module>
	</modules>

	<build>
            <extensions>
                <!-- this is to enable the scp protocol in site deploy -->
                <extension>
                    <groupId>org.apache.maven.wagon</groupId>
                    <artifactId>wagon-ssh</artifactId>
                    <version>3.2.0</version>
                </extension>
            </extensions>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>external.atlassian.jgitflow</groupId>
					<artifactId>jgitflow-maven-plugin</artifactId>
					<version>1.0-m5.1</version>
					<configuration>
						<autoVersionSubmodules>true</autoVersionSubmodules>
						<flowInitContext>
							<masterBranchName>master</masterBranchName>
							<developBranchName>dev</developBranchName>
							<featureBranchPrefix>ft-</featureBranchPrefix>
							<releaseBranchPrefix>rl-</releaseBranchPrefix>
							<hotfixBranchPrefix>hf-</hotfixBranchPrefix>
							<versionTagPrefix>v</versionTagPrefix>
						</flowInitContext>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.6.0</version>
					<configuration>
						<source>1.7</source>
						<target>1.7</target>
						<compilerArgument>-proc:none</compilerArgument>
						<testCompilerArgument>-proc:none</testCompilerArgument>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
		<repository>
			<id>bindgen</id>
			<url>http://repo.joist.ws/</url>
		</repository>
            <repository> 
                  <id>nexus.internal.releases</id>
                  <url>https://nexus.vitry.intranet/content/repositories/InternalSmileReleases/</url> 
                  <snapshots>
                     <enabled>false</enabled>
                  </snapshots>
            </repository>
            <repository> 
                  <id>nexus.internal.snapshots</id>
                  <url>https://nexus.vitry.intranet/content/repositories/InternalSmileSnapshots/</url> 
                  <releases>
                     <enabled>true</enabled>
                  </releases>
            </repository>

            <repository>
                <id>nexus.internal.third-party</id>
                <url>https://nexus.vitry.intranet/content/repositories/nonCentralArtifacts/</url>
            </repository>

	</repositories>

    <distributionManagement>
        <repository>
            <id>nexus.internal.releases</id>
            <url>https://nexus.vitry.intranet/content/repositories/InternalSmileReleases/</url>
        </repository>
        <snapshotRepository>
            <id>nexus.internal.snapshots</id>
            <url>https://nexus.vitry.intranet/content/repositories/InternalSmileSnapshots/</url>
        </snapshotRepository>
        <site>
           <id>maven.doc.smile</id>
           <url>scp://pic-java.vitry.intranet/var/www/${project.groupId}/${project.artifactId}</url>
        </site>
    </distributionManagement>


    <scm>
        <connection>scm:git:git@git.smile.fr:skill-center-lyon/owsi-core/bindgen.git</connection>
        <developerConnection>scm:git:git@git.smile.fr:skill-center-lyon/owsi-core/bindgen.git</developerConnection>
        <url>https://git.smile.fr/skill-center-lyon/owsi-core/bindgen</url>
        <tag>HEAD</tag>
    </scm>

</project>
